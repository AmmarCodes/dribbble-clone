<h1 class="font-bold text-4xl">Log in</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="my-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="my-5 flex gap-4">
      <%= f.check_box :remember_me, class: 'h-5 w-5 rounded-md border-gray-200 bg-white shadow-sm' %>
      <%= f.label :remember_me, class: 'text-sm text-gray-700' %>
    </div>
  <% end %>
  <%= f.submit "Log in", class: 'rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer' %>
  <%= render "devise/shared/links" %>
<% end %>
