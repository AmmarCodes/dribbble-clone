<div id="<%= dom_id shot %>" class="px-5 pb-5 rounded bg-white shadow">
  <div class="my-5 overflow-hidden rounded-lg relative">
    <%= link_to shot, class: "bg-gray-100 inline-block font-medium" do %>
      <%= image_tag(shot.user_shot_url, class: 'object-cover object-center h-48 w-96 max-w-full') %>
      <div class="absolute h-48 bottom-0 left-0 right-0 bg-gradient-to-t from-gray-900 to-50% text-white flex items-end justify-end pe-2 pb-2">
        <%= truncate(shot.title, length: 100) %>
      </div>
    <% end %>
  </div>
  <div class="flex align-center justify-between">
    <a class="inline-flex" href="#TODO:/point/to/user/profile">
      <img src="<%= shot.user.gravatar_image %>" width="24" height="24" class="rounded-full me-3" alt="<%= shot.user.name %>'s profile photo" />
      <%= shot.user.name %>
    </a>
    <div class="text-sm text-gray-500 text-right">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 inline">
        <path d="M10 12.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" />
        <path fill-rule="evenodd" d="M.664 10.59a1.651 1.651 0 010-1.186A10.004 10.004 0 0110 3c4.257 0 7.893 2.66 9.336 6.41.147.381.146.804 0 1.186A10.004 10.004 0 0110 17c-4.257 0-7.893-2.66-9.336-6.41zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
      </svg>
      <%= shot.impressionist_count %>

      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ms-2 inline">
        <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 01.865-.501 48.172 48.172 0 003.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
      </svg>

      <%= shot.comments.count %>
    </div>
  </div>
</div>
